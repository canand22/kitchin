@if(Request.IsAuthenticated) {
    <text>Welcome <strong>@User.Identity.Name</strong>!
    [ @Html.ActionLink("Change password", "ChangePassword", "Account", new { area = "" }, new {}) | @Html.ActionLink("Log Off", "LogOff", "Account", new { area = "" }, new {}) ]</text>
}
else {
    @:[ @Html.ActionLink("Log On", "LogOn", "Account", new { area = "" }, new {}) | @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { }) ]
}
